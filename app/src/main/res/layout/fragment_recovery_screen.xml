<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    tools:context=".ui.auth.recovery.RecoveryScreen">

<TextView
    android:id="@+id/signIn_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Account recovery"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="20sp"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/phone_number_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="8dp"
    android:text="To get a verification code, first confirm the recovery phone number"
    android:textColor="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/signIn_txt" />

<TextView
    android:id="@+id/password_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:text="Phone number"
    android:textColor="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/phone_number_txt" />

<EditText
    android:id="@+id/password_edt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_edit_text"
    android:padding="16dp"
    android:hint="+998 00 000 00 00"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/password_txt" />

<Button
    android:id="@+id/btn_sig_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="Send"
    android:enabled="false"
    app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>